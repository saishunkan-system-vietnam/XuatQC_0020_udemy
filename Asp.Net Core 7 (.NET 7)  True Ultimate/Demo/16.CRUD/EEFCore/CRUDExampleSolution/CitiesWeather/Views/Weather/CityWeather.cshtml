@model CityWeather
<!DOCTYPE html>

<html>
<head>
    <title>The weather of specificed City</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="page-content">
            <div class="margin-bottom">
                <h1>Weather App</h1>
            </div>

            @if (Model != null)
            {
                <div class="box w-30 margin-auto margin-top-200 @Model.GetBackgroundColorByTemperature(Model.TemperatureFahrenheit)">
                    <div class="flex-borderless">
                        <div class="w-50">
                            <h2>@Model.CityName</h2>
                            <h4 class="text-dark-grey">@Model.DateAndTime.ToString("dd MMM yyyy")</h4>
                            <h4 class="text-dark-grey">@Model.DateAndTime.ToString("hh:mm tt")</h4>
                        </div>
                        <div class="w-50 border-left">
                            <h1 class="margin-left">@Model.TemperatureFahrenheit <sup class="text-grey">&#8457</sup></h1>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <a href="~/">Back to Weather Home Page</a>
                </div>
            }
            else
            {
                <h3>Specificed city Code is invalid, please confirm</h3>
            }
        </div>
    </div>
</body>
</html>
